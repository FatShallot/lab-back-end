<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lpc.dao.SystemUserMapper">
    <resultMap id="BaseResultMap" type="com.lpc.entity.pojo.SystemUser">
        <id column="username" property="username" jdbcType="INTEGER"/>
        <result column="real_name" property="realName" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="role_id" property="role" jdbcType="VARCHAR"/>
        <result column="status_id" property="statusId" jdbcType="INTEGER"/>
    </resultMap>
    <sql id="Base_Column_List">
        username, real_name, password, role status_id
    </sql>

    <select id="selectStudents" resultType="com.lpc.entity.dto.StudentDTO">
        select
        u.username,
        u.real_name,
        u.status_id,
        s.status as status
        from system_user u
        left join enum_status s on u.status_id = s.id
        <where>
            u.role = 'student'
            <if test="realName != ''">
                and real_name like concat('%',#{realName},'%')
            </if>
        </where>
    </select>
</mapper>